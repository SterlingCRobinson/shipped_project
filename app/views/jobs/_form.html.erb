<%= form_for @job do |f| %>
		<% if @job.errors.any? %>
			<div id="errors">
				<h2><%= pluralize(@job.errors.count, "error") %> prevented this job from saving</h2>
				<ul>
					<% @job.errors.full_messages.each do |msg| %>
						<li><% msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<p>
			<%= f.label :origin %><br>
			<%= f.text_field :origin %>
		</p>

		<p>
			<%= f.label :destination %><br>
			<%= f.text_field :destination %>
		</p>

		<p>
			<%= f.label :description %><br>
			<%= f.text_area :description %>
		</p>

		<p>
			<%= f.label :containers %><br>
			<%= f.text_field :containers %>
		</p>

		<p>
			<%= f.label :cost %><br>
			<%= f.text_field :cost %>
		</p>


		<p>
			<%= f.submit %>
		</p>

	<% end %>
