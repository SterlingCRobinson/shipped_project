<!DOCTYPE html>
<html>
  <head>
    <title>Project: Shipped</title>
	<%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="nav">
  	<div>
  	<%= link_to "Home", "/", :class => "nav-btn" %>
  	<% if current_user %>
  		<%= link_to "My boats", "/boats", :class => "nav-btn" %>
  		<%= link_to "Log out", destroy_user_session_path, method: :delete, :class => "nav-btn" %>
  	<% else %>
	  	<%= link_to "Log in", new_user_session_path, :class => "nav-btn" %>
	  	<%= link_to "Sign up", new_user_registration_path, :class => "nav-btn" %>
	  <% end %>
	</div>
  </div>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  	
  </body>
</html>
