<%= form_for @boat do |f| %>
		<% if @boat.errors.any? %>
			<div id="errors">
				<h2><%= pluralize(@boat.errors.count, "error") %> prevented this boat from saving</h2>
				<ul>
					<% @boat.errors.full_messages.each do |msg| %>
						<li><% msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<p>
			<%= f.label :name %><br>
			<%= f.text_field :name %>
		</p>

		<p>
			<%= f.label :loc %><br>
			<%= f.text_field :loc %>
		</p>

		<p>
			<%= f.hidden_field :containers, value: 0 %>
		</p>

		<p>
			<%= f.submit %>
		</p>

	<% end %>