<%= link_to "Add a new boat", "/boats/new" %>

<% @boats.each do |boat| %>
		<div class="show-boats">
			<img src="<%= boat.avatar %>" alt="" width="200px">
			<p>Boat name: <%= boat.name %></p>
			<br>
			<p>Located: <%= boat.loc %></p>
			<br>
			<p>Currently holding <%= boat.containers %> containers.</p>
			<br>
			<a href="/boats/<%= boat.id %>/edit"> Edit </a>
		</div>
<% end %>
